@{
    ViewBag.Title = "Localizacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Clinica.Site.Negocio.Cadastro.Endereco endereco = (Clinica.Site.Negocio.Cadastro.Endereco)ViewData["endereco"];
}
<div class="container-fluid">
    <div class="row row-titulos-paginas">
        <div class="col-md-12 text-center">
            <h2 class="font-titulo-paginas"><i class="fa fa-map-marker fa-2x"></i>&nbsp;Nossa Localização</h2>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12  text-center">
            <p class="text-center">
                Incluir uma breve descrição sobre a localização, pontos de referencia, etc...
            </p>
        </div>
    </div>
    <hr>
</div>

<div class="container">
    <div class="col-md-12 col-md-offset-1">
        <div class="col-md-4 text-left bg-primary" id="rowLocalizacao">
            <div class="row" style="padding-top:20px; padding-left:20px">
                <h3><i class="fa fa-heartbeat" aria-hidden="true"></i>&nbsp;Clínica Médica</h3>
            </div>            
            <div class="row" style="padding-left:20px">@endereco.Rua, nº @endereco.Numero, @endereco.Complemento - @endereco.Bairro.</div>
            <div class="row" style="padding-left:20px">CEP: @endereco.Cep - @endereco.Cidade - @endereco.Estado.</div>
            <hr>
            @{
                if (ViewBag.telefones != null)
                {
                    foreach (var item in ViewData["telefones"] as IEnumerable<Clinica.Site.Negocio.Cadastro.Telefone>)
                    {
                        <div class="row" style="padding-left:20px">
                            <h4><i class="fa fa-phone fa-lg"></i>&nbsp;Contatos</h4>
                            <ul>
                                <li>Tel: (@item.Ddd.Trim()) @item.Numero</li>
                                <li>Fax: (@item.Ddd.Trim()) @item.Numero</li>
                            </ul>
                        </div>                        
                    }
                }
            }            
            <hr />
            <div class="row" style="padding-left:20px">
                <h4><i class="fa fa-clock-o fa-lg"></i>&nbsp;Funcionamento</h4>
                <ul>
                    @foreach (var item in ViewData["horarios"] as IEnumerable<Clinica.Site.Negocio.Cadastro.Horarios>)
                    {
                        if (item.Dia == "Uteis")
                        {
                            <li>2ª a 6ª das @item.Abertura às @item.Fechamento</li>
                        }
                        else
                        {
                            <li>@item.Dia das @item.Abertura às @item.Fechamento</li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-8 text-left" style="padding-top:7px; padding-left:0px;">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.0632822153766!2d-46.65480518439939!3d-23.56617058468043!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59c7a4133de5%3A0x576556bae6dfe0a1!2sAlameda+Santos%2C+1000+-+Jardim+Paulista%2C+S%C3%A3o+Paulo+-+SP%2C+01418-902!5e0!3m2!1spt-BR!2sbr!4v1493833894418"
                    width="630" height="450" frameborder="0" style="border:0" allowfullscreen=""></iframe>
        </div>
    </div>
</div>
<br /><br />