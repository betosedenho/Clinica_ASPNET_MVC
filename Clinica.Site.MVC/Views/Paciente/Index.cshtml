@model Clinica.Site.Negocio.Cadastro.Paciente
@{
    Clinica.Site.Negocio.Cadastro.Endereco endereco = (Clinica.Site.Negocio.Cadastro.Endereco)
    ViewData["endereco"];
}

<div class="section section_fale_conosco">
    <div class="container-fluid">
        <div class="row row-titulos-paginas">
            <div class="col-md-12 text-center">
                <h2 class="font-titulo-paginas"><i class="fa fa fa-id-card-o fa-1x" aria-hidden="true"></i>&nbsp;Informações do Paciente</h2>
            </div>
        </div>
    </div>

    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <form class="form-horizontal" role="form" data-toggle="validator">

                        <div class="form-group">
                            <div class="row">
                                <br />
                                <div class="col-md-12 text-justify">
                                </div>
                            </div>
                            <hr>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">CPF:</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value="@Html.DisplayFor(model => model.Cpf)">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">Nome:</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value=" @Html.DisplayFor(model => model.Nome)">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">E-Mail:</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value="@Html.DisplayFor(model => model.Email)">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">Data de Nascimento:</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value="@Html.DisplayFor(model => model.DataNascimento)">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">Celular:</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value="@Html.DisplayFor(model => model.Celular)">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">Tel.Fixo:</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value="@Html.DisplayFor(model => model.TelefoneFixo)">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">É paciente:</label>
                            </div>
                            <div class="col-md-4">
                                @if (Model.EhPaciente == true)
                                {
                                    <input type="text" class="form-control input-sm" style="background-color:white" readonly value="Sim">
                                }
                                else
                                {
                                    <input type="text" class="form-control input-sm" style="background-color:white" readonly value="Não">
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                                <label class="control-label titulo-paginas">Endereço:</label>
                            </div>
                            <div class="col-md-7">
                                @{
                                    String enderecoCompleto = @endereco.Logradouro + ", " + @endereco.Numero + "-" + @endereco.Bairro + " CEP: " + @endereco.Cep + " - " + endereco.NomeCidade;
                                }
                                <input type="text" class="form-control input-sm" style="background-color:white" readonly value="@enderecoCompleto">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 text-right">
                            </div>
                            <div class="col-md-5">
                                @Html.ActionLink("Alterar Informações", "Edit", new { id = Model.Id }, new { @class = "btn btn-padrao-verde" })
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @*@Html.ActionLink("Back to List", "Index")*@
</p>
