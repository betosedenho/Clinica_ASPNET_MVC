@model Clinica.Site.Negocio.Estrutura.Carrossel

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<section class="section-dashboard">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<h2 class="titulo-paginas"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalhes do Slides</h2>
			</div>
		</div><hr>
	</div>


	<div class="container">

		<div class="col-md-12">
			<div class="form-group">
				<a href="/Carrossels/Index" type="submit" class="btn btn-padrao-verde btn-sm"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Voltar para Lista</a>
			</div>
		</div>

		<div class="col-md-8 col-md-offset-2">


			<div class="form-group">
				<div class="col-sm-2">
					<label for="inputTexto" class="control-label titulo-paginas">Imagem:</label>
				</div>
				<div class="col-sm-8 input-group">
					<img src=@Html.DisplayFor(model => model.Imagem) class="img-responsive" style="max-width:485px; max-height:200px;">
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-2">
					<label for="inputTexto" class="control-label titulo-paginas">Texto:</label>
				</div>
				<div class="col-sm-8 input-group">
					<textarea class="form-control" id="inputTexto" maxlength="200" rows="5" readonly>@Html.DisplayNameFor(model => model.Texto)</textarea>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-2">
					<label for="inputItem" class="control-label titulo-paginas">Mostrar Primeiro:</label>
				</div>
				<div class="col-sm-8 input-group">
					@if (@Html.DisplayNameFor(model => model.Item).ToString() == "item active")
					{
						<input id="chkAtivo" type="checkbox" checked disabled>
					}
					else
					{
						<input id="chkAtivo" type="checkbox" disabled>
					}

				</div>
			</div>
		</div>
	</div>
</section>
