@model System.Web.Mvc.HandleErrorInfo
@{
    if (!HttpContext.Current.User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_DashBoard.cshtml";
    }
    ViewBag.Title = "Ops!";
}

<section class="section-dashboard">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="titulo-paginas"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Ops! 500 (Internal Server Error)!</h2>
            </div>
        </div><hr>
    </div>
    <div class="container">
        <hgroup class="title">
            @if (@Model != null)
            {
                <h2 class="error">
                    @Model.Exception
                </h2>
            }
            else
            {
                <h2>
                    <p class="text-justify">
                        Ocorreu um problema com sua solicitação.
                        Favor tentar mais tarde.
                    </p>
                </h2>
            }
        </hgroup>
    </div>
</section>