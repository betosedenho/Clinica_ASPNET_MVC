					<div class="section">

						<div class="form-group">
							<div class="col-sm-7 text-left">
								<label class="control-label titulo-paginas">Informações adicionais:</label>
							</div>
						</div>

						<div class="form-group col-md-11" style="background-color:#ededed; border-spacing:5px; border-radius:15px 15px;">
							<div class="col-sm-2 text-right">
								<label for="inputItem" class="control-label titulo-paginas-font-11">Ativa:</label>
							</div>
							<div class="col-sm-8 input-group">
								@if (Model.Ativo == true)
								{
									<input id="chkAtivo" type="checkbox" checked>
								}
								else
								{
									<input id="chkAtivo" type="checkbox">
								}

							</div>
						</div>

						<div class="form-group" style="background-color:#ededed; border-spacing:5px; border-radius:15px 15px;">
							<div class="col-sm-2 text-right">
								<label for="inputNome" class="control-label titulo-paginas-font-11">Observações:</label>
							</div>
							<div class="col-sm-8 input-group">
								<textarea class="form-control input-sm" id="inputObs" maxlength="400" rows="4">@Html.ValueFor(model => model.Observacao)</textarea>
							</div>
							
							<div class="col-sm-2 text-right">
								<label for="inputData" class="control-label titulo-paginas-font-11">Data:</label>
							</div>
							<div class="col-sm-3 col-lg-offset-2 input-group">
								<input type="text" class="form-control input-sm calendario" id="inputData" value="@Html.ValueFor(model => model.Data)">
							</div>

							<div class="col-sm-2 text-right">
								<label for="inputHora" class="control-label titulo-paginas-font-11">Horário:</label>
							</div>
							<div class="col-sm-3 col-lg-offset-2 input-group">
								<input type="text" class="form-control input-sm" id="inputHora" value="@Html.ValueFor(model => model.Horario)">
