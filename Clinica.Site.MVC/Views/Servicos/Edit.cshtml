							</div>

						</div>
					</div>


				<div class="form-group ">
					<div class="col-sm-4 text-right">
						<label for="inputNome" class="control-label titulo-paginas-font-11">Nome:</label>
					</div>
					<div class="col-sm-8 input-group">
						<p>@Html.ValueFor(model => model.Nome)</p>
