				<div class="form-group">
					<div class="col-sm-4 text-right">
						<label for="inputTexto" class="control-label titulo-paginas-font-11">3ª Opção Data Preferêncial:</label>
					</div>
					<div class="col-sm-8 input-group">
						<p>@Html.ValueFor(model => model.DataPreferencial3).ToHtmlString()</p>
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-4 text-right">
						<label for="inputTexto" class="control-label titulo-paginas-font-11">Período Preferêncial:</label>
					</div>
					<div class="col-sm-8 input-group">
						<p>@Html.ValueFor(model => model.PeriodoPreferencial)</p>
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-4 text-right">
						<label for="inputTexto" class="control-label titulo-paginas-font-11">Como Conheceu a clínica?</label>
					</div>
					<div class="col-sm-8 input-group">
						<p>@Html.ValueFor(model => model.ComoConheceu)</p>
					</div>
				</div>

				<div class="form-group">
