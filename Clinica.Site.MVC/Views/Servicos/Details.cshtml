@model Clinica.Site.Negocio.Cadastro.Agendamento

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_DashBoard.cshtml";

    string dataFormatada;
}

<section class="section-dashboard">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center text-danger">
                <h2 class="titulo-paginas"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalhes do Agendamento</h2>
            </div>
        </div><hr>
    </div>


    <div class="container">
        <div class="col-md-12">
            <div class="form-group">
                <a href="/Servicos/Index" type="submit" class="btn btn-padrao-verde btn-sm"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Voltar para Lista</a>
            </div>
        </div>

        <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Nome:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Nome)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Cpf:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Cpf)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Data de Nascimento:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.DataNascimento)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Telefone:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Telefone)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Celular:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Celular)</p>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Consultas:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Consultas)</p>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Exames:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Exames)</p>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Check-up:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Checkup)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">1ª Opção Data Preferêncial:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.DataPreferencial1).ToHtmlString()</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">2ª Opção Data Preferêncial:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.DataPreferencial2).ToHtmlString()</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">3ª Opção Data Preferêncial:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.DataPreferencial3).ToHtmlString()</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Período Preferêncial:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.PeriodoPreferencial)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Como Conheceu a clínica?</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.ComoConheceu)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputItem" class="control-label titulo-paginas-font-11">É Cliente</label>
                </div>
                <div class="col-sm-8 input-group">
                    @Html.CheckBoxFor(model => model.EhCliente, new { @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputItem" class="control-label titulo-paginas-font-11">Ativo</label>
                </div>
                <div class="col-sm-8 input-group">
                    @Html.CheckBoxFor(model => model.Ativo, new { @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Observações:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Observacao)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Data de Atendimento:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Data)</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Horário de Atendimento:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.Horario)</p>
                </div>
            </div>

            @*@{ 
                dataFormatada = Model.DataInclusao.ToString("dd/MM/yyyy HH:mm:ss");                
            }*@
            <div class="form-group">
                <div class="col-sm-4 text-right">
                    <label for="inputTexto" class="control-label titulo-paginas-font-11">Data do Agendamento:</label>
                </div>
                <div class="col-sm-8 input-group">
                    <p>@Html.ValueFor(model => model.DataInclusao)</p>
                    @*<p>@dataFormatada</p>*@
                </div>
            </div>

        </div>
    </div>
</section>